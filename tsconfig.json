{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@/config/*": ["../../config/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/test/page.js", "types/Project.ts", "sanity/sanity-utils.ts", "sanity.config.js", "app/portfolio/bootcamp/kodego/page.js", "sanity/config/client-config.js", "app/portfolio/bootcamp/page.js", "app/portfolio/bootcamp/kodego/project/page.js", "app/portfolio/bootcamp/kodego/challenge/page.js", "app/portfolio/bootcamp/kodego/activity/page.js", "app/portfolio/page.js"],
  "exclude": ["node_modules"]
}
